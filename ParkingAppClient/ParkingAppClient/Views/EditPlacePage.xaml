<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ParkingAppClient.Views.EditPlacePage">

    <!--<ContentPage.BindingContext>
        <ViewModels:EditPlaceViewModel/>
    </ContentPage.BindingContext>-->

    <StackLayout VerticalOptions="StartAndExpand">
        <Entry Text="{Binding PlaceName}" Placeholder="placename"/>
        <Entry Text="{Binding Address}" Placeholder="address"/>
        <Entry x:Name="max" Text="{Binding MaxSlots}" Placeholder="maxslots"/>
        <Entry x:Name="lotude" Text="{Binding Longitude}" Placeholder="longitude" IsEnabled="False"/>
        <Entry x:Name="latude" Text="{Binding Latitude}" Placeholder="lattitude" IsEnabled="False"/>


        <Button Text="Edit Location" Clicked="EditLocation"/>
        <Button Text="Edit Place" Clicked="SaveEdit"/>


    </StackLayout>
</ContentPage>